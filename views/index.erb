<html>
  <head>
    <title>Green Screen - Monitor Your Builds</title>
    <link rel='stylesheet' href='/styles.css' type='text/css' media="screen">
    <script type="text/javascript" src="/jquery-1.6.2.min.js"></script>
    <script type="text/javascript" src="/jquery.quicksand.js"></script>
    <script type="text/javascript" src="/jquery.timeago.js"></script>
    <script type="text/javascript" src="/buzz.js"></script>
    <script type="text/javascript" src="/greenscreen.js"></script>
    <style type="text/css">
      .status {
        width: <%= 100 / @columns %>%;
        height: <%= 100 / @rows %>%;
      }
      h1 {
        margin-top: <%= 50 / @rows %>px;
        font-size: <%= 100 / @rows * 3 %>px;
      }

      #tender { font-size: 26px; padding: 3px; color: #aaa;}
      #tender span { padding: 5px;}
      #tender .recent { color: #faa; }
    </style>
  </head>
  <body>
    <div id="tender">
    </div>
    <div id="builds">
      <%= partial :builds %>
    </div>
  </body>
</html>
